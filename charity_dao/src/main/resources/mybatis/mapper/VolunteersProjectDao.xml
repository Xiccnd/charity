<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.cqwu.charity_dao.mapper.VolunteersProjectDao">

    <resultMap id="BaseResultMap" type="net.cqwu.charity_commons.pojo.VolunteersProject">
        <!--@Table volunteers_project-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="pid" column="pid" jdbcType="INTEGER"/>
        <result property="postid" column="postid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, pid, postid
        from charity.volunteers_project
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, pid, postid
        from charity.volunteers_project
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, pid, postid
        from charity.volunteers_project
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="postid != null">
                and postid = #{postid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into charity.volunteers_project(id, pid, postid)
        values (#{id}, #{pid}, #{postid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update charity.volunteers_project
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="postid != null">
                postid = #{postid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from charity.volunteers_project where id = #{id}
    </delete>

</mapper>